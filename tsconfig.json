{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "./source",
    "moduleResolution": "NodeNext",
    "outDir": "./server",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./source/**/*"],
  "exclude": ["node_modules"]
}
